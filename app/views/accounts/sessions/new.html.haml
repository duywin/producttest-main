!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "UTF-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Login
    :css
      /* Set the background image for the whole section */
      .login-section {
          background-image: url('https://images.pexels.com/photos/40784/drops-of-water-water-nature-liquid-40784.jpeg');
          background-size: cover;
          background-position: center;
          height: 100vh; /* Full viewport height */
          display: flex;
          align-items: center;
          justify-content: center;
      }

      /* Center the form container */
      .login-form-container {
          background-color: rgba(255, 255, 255, 0.9); /* Light skin background with slight transparency */
          padding: 2rem;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
          width: 100%;
          max-width: 400px; /* Set a max width for the form */
          text-align: center;
      }

      /* Style form groups */
      .form-group {
          margin-bottom: 1rem;
      }

      /* Style form labels and inputs */
      .form-group label {
          display: block;
          margin-bottom: 0.5rem;
      }

      .form-group input {
          width: 100%;
          padding: 0.75rem;
          border: 1px solid #ccc;
          border-radius: 4px;
      }

      /* Style submit button */
      .btn-login {
          background-color: #007bff;
          color: white;
          border: none;
          padding: 0.75rem 1.5rem;
          border-radius: 4px;
          cursor: pointer;
      }

      .btn-login:hover {
          background-color: #0056b3;
      }

      /* Style signup link */
      p a {
          color: #007bff;
      }

      p a:hover {
          text-decoration: underline;
      }
  %body
    %section.login-section
      .login-form-container
        %h2 Login
        = form_with model: resource, url: session_path(resource_name), method: :post, local: true, html: { id: 'login-form' } do |f|
          .form-group
            = f.label :username
            = f.text_field :username, placeholder: 'Username'
          .form-group
            = f.label :password
            = f.password_field :password, placeholder: 'Password'
          .form-group
            = f.submit 'Login', class: 'btn-login'
        = link_to 'Forgot your password?', new_account_password_path
        %p
          Don't have an account?
          %a{:href => new_account_registration_path} Sign Up
